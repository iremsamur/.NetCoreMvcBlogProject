@using CoreDemo.Controllers
@model List<Class1>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h1>Çalışanlar</h1>
<table class="table table-bordered">
    <tr>
        <th>
            #
        </th>
        <th>
            Adı-Soyadı
        </th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @item.ID
                        <!--bu değerler Class1'den gelir. Geçici model olan class1'i tanımladım.'-->
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        <a href="/EmployeeTest/DeleteEmployee/@item.ID" class="btn btn-danger">Sil</a>
                        
                    </td>
                    <td>
                        <a href="/EmployeeTest/EditEmployee/@item.ID" class="btn btn-outline-success">Güncelle</a>
                    </td>
                </tr>
            }

</table>
<a href="/EmployeeTest/AddEmployee" class="btn btn-outline-primary">Yeni Çalışan Girişi</a>


