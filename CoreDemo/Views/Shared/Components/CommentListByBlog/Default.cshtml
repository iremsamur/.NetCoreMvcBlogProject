@model IEnumerable<EntityLayer.Concrete.Comment>
<div class="comment-top">
    <h4>Yorumlar</h4>
    <br />

    @if (Model.Count() == 0)
    {
        <div class="container">
            <div class="row">
                <div class="col">
                    <img src="~/CoreBlogTema/web/images/yorum-yap.jpg" class="img-thumbnail" alt="">

                </div>
                <div class="col">
                    <h3>Henüz Bir Yorum Yapılmamış. <br />Hadi İlk Yorumu Sen Yap.</h3>
                </div>

            </div>
            </div>
            
            
            }
            else
            {
            @foreach (var item in Model)
            {
                <div class="media">

                    <img src="~/CoreBlogTema/web/images/t1.jpg" alt="" class="img-fluid" />
                    <div class="media-body">
                        <h5 class="mt-0">@item.CommentUserName</h5>
                        <p>
                            @item.CommentContent
                        </p>


                    </div>

                </div>



            }


            }




        </div>

