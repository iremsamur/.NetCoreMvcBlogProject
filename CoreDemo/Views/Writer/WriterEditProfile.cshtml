@model EntityLayer.Concrete.AppUser

@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}


@using (Html.BeginForm("WriterEditProfile", "Writer", FormMethod.Post)) { 
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar Profil Bilgileri Düzenleme</h4>
            <br />
            @Html.HiddenFor(x => x.Id, new { @class = "form-control" })
            

        <form class="forms-sample">
            <div class="form-group">
                <label for="exampleInputName1">Yazar Ad-Soyad </label>

                @*<input type="text" class="form-control" id="exampleInputUsername1" asp-for = "WriterName" placeholder="Username">*@

                @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="exampleInputEmail3">Mail Adres</label>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                @*<input type="text" class="form-control" id="exampleInputUsername1" asp-for="WriterMail" placeholder="Username">*@

            </div>
            <div class="form-group">
                <label for="exampleInputEmail3">Kullanıcı Adı</label>
                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                @*<input type="text" class="form-control" id="exampleInputUsername1" asp-for="WriterMail" placeholder="Username">*@

            </div>
            <div class="form-group">
                <label for="exampleInputPassword4">Şifre</label>
                @Html.PasswordFor(x => x.PasswordHash, new { @class = "form-control" })
            </div>


            <div class="form-group">
                <label>Yazar Görsel</label>
                <input type="file" name="img[]" class="file-upload-default">
                <div class="input-group col-xs-12">
                    <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                    <span class="input-group-append">
                        <button class="file-upload-browse btn btn-gradient-primary" type="button">Resim Seç</button>
                    </span>
                </div>
            </div>

           
            <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
            <button class="btn btn-light">İptal</button>
        </form>
        </div>
    </div>
</div>


}

