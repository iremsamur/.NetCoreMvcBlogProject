@model CoreDemo.Models.UserUpdateViewModel

@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}


 
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar Profil Bilgileri Düzenleme</h4>
            <br />
            
            

            <form class="forms-sample" method="post" asp-action="WriterEditProfile" asp-controller="Writer">
                <div class="form-group">
                    <label for="exampleInputName1">Yazar Ad-Soyad </label>

                    @*<input type="text" class="form-control" id="exampleInputUsername1" asp-for = "WriterName" placeholder="Username">*@

                    <input type="text" asp-for="@Model.namesurname" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Kullanıcı Adı </label>

                    @*<input type="text" class="form-control" id="exampleInputUsername1" asp-for = "WriterName" placeholder="Username">*@

                    <input type="text" asp-for="@Model.username" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Mail Adres</label>

                    <input type="text" asp-for="@Model.mailadress" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Yeni Şifreniz</label>

                    <input type="text" asp-for="@Model.password" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Resim Yolu</label>

                    <input type="text" asp-for="@Model.imageurl" class="form-control" />

                </div>




                <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                <button class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>




