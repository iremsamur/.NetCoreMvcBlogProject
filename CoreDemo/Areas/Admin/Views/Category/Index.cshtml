@using X.PagedList
@using X.PagedList.Mvc.Core 
@model IPagedList<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h1>Kategori Listesi</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>
            #
        </th>
        <th>
            Kategori Adı
        </th>
        <th>
            Aktif Yap
        </th>
        <th>
            Pasif Yap
        </th>
        <th>
            Düzenle
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td><a href="/Admin/Category/DeleteCategory/@item.CategoryID/" id="deleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz?');" 
                   class="btn btn-info">Pasif Yap</a></td>
            <td><a href="#" class="btn btn-warning">Aktif Yap</a></td>
            <td><a href="#" class="btn btn-success">Düzenle</a></td>


        </tr>
    }



</table>
<br />
<a href="/Admin/Category/AddCategory" class="btn btn-primary">Yeni Kategori</a>
<br />
<br />
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new { page }))
